@using downr.Models;
@using System.Linq;

@{
    var _categories = (ViewData["IndexModel"] == null) ? null : (ViewData["IndexModel"] as IndexModel).Categories;
    IndexModel _model = (ViewData["IndexModel"] as IndexModel);
}

<div class="ui fixed menu">
    <div class="ui container">
        <a href="/" class="header item">
            <img class="logo" src="~/images/my-icon.png">bradygaster.com
        </a>
        @if(_categories != null)
        {
        <div class="ui simple dropdown item">
            Categories
            <i class="dropdown icon"></i>
            <div class="menu">
            @{
                foreach (var category in _categories.OrderBy(x => x.Key))
                {
                    <a class="item" href="/categories/@category.Key">@category.Key</a>
                }
            }
            </div>
        </div>
        }
        <div class="right menu">
            @{
                if(_model != null && !string.IsNullOrEmpty(_model.Previous))
                {
            <a class="item" href="/@_model.Previous" title="@_model.PreviousTitle">
                <i class="arrow alternate circle left outline"></i>
                Previous
            </a>
                }
            }
            @{
                if(_model != null && !string.IsNullOrEmpty(_model.Next))
                {
            <a class="item" href="/@_model.Next" title="@_model.NextTitle">
                Next
                <i class="arrow alternate circle right outline"></i>
            </a>
                }
            }
        </div>
    </div>
</div>